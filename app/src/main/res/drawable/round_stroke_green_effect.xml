<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@color/green_color"
                android:startColor="@color/green_color_dark" />
            <corners android:radius="@dimen/_10sdp" />
            <padding
                android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="@color/green_color"
                android:startColor="@color/green_color_dark" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
</layer-list>